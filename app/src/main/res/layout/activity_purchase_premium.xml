<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NavigatorActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="50dp"
        android:paddingEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:paddingBottom="18dp"
            android:text="@string/noAds_descriptionHeader"
            android:textSize="@dimen/textview_big_0_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_check_black_24dp"
            android:drawablePadding="6dp"
            android:lineSpacingExtra="12sp"
            android:paddingBottom="12sp"
            android:text="@string/noAds_feature"
            android:textSize="@dimen/textView_middle_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/purchasePremiumActivity_noAdsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/noAds_purchaseButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchaseButtonHint"
                android:textSize="@dimen/textview_small_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="50dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:paddingBottom="18dp"
            android:text="@string/fullVersion_descriptionHeader"
            android:textSize="@dimen/textview_big_1_size"
            android:textStyle="bold" />

        <!--        todo check all texts for all using sp-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_check_black_24dp"
            android:drawablePadding="6dp"
            android:lineSpacingExtra="12sp"
            android:paddingBottom="12sp"
            android:text="@string/fullVersion_feature_0"
            android:textSize="@dimen/textView_middle_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_check_black_24dp"
            android:drawablePadding="6dp"
            android:lineSpacingExtra="12sp"
            android:paddingBottom="12sp"
            android:text="@string/fullVersion_feature_1"
            android:textSize="@dimen/textView_middle_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_check_black_24dp"
            android:drawablePadding="6dp"
            android:lineSpacingExtra="12sp"
            android:paddingBottom="12sp"
            android:text="@string/fullVersion_feature_2"
            android:textSize="@dimen/textView_middle_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_check_black_24dp"
            android:drawablePadding="6dp"
            android:lineSpacingExtra="12sp"
            android:paddingBottom="12sp"
            android:text="@string/fullVersion_feature_3"
            android:textSize="@dimen/textView_middle_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_check_black_24dp"
            android:drawablePadding="6dp"
            android:lineSpacingExtra="12sp"
            android:paddingBottom="12sp"
            android:text="@string/fullVersion_feature_4"
            android:textSize="@dimen/textView_middle_size"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/purchasePremiumActivity_fullVersionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fullVersion_purchaseButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchaseButtonHint"
                android:textSize="@dimen/textview_small_size"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintHeight_max="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:gravity="center"
        android:layoutDirection="locale">

        <ImageButton
            android:id="@+id/purchasePremiumActivity_gallery_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_24dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_prev" />

        <ImageView
            android:id="@+id/purchasePremiumActivity_gallery_imageView"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageButton
            android:id="@+id/purchasePremiumActivity_gallery_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward_24dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_next" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>

